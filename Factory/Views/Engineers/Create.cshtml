@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new Engineer</h4>
<p>@Html.ValidationMessageFor(model => model.EngineerName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.HireDate, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.EngineerName, "Engineer Name: ")
  @Html.TextBoxFor(model => model.EngineerName)

  @Html.LabelFor(model => model.HireDate, "Hire Date: ")
  @Html.EditorFor(model => model.HireDate)


  <input type="submit" value="Add new Engineer"/>
}
<hr>
<p>
  @Html.ActionLink("Show all Engineers", "Index") |
  @Html.ActionLink("Return Home", "Index", "Home")
</p>