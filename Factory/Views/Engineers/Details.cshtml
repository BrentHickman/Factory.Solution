@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Engineer

<h2>Engineer Details</h2>
<hr />
<h3>@Html.LabelFor(model => model.EngineerName, "Engineer Name: ") @Html.DisplayFor(model => model.EngineerName)</h3>  
<h3>@Html.LabelFor(model => model.HireDate, "Date Hired: ") @Html.DisplayFor(model => model.HireDate)</h3>  


@if(@Model.JoinEntities.Count == 0)
{
  <p>This engineer does not have any Machines yet!</p>
}
else
{
  <h4>This engineer has the following Machines:</h4>
  <ul>
    @foreach(EngMach join in Model.JoinEntities)
    {
      <li>Machine: @join.Machine.MachineName</li>
      @using (Html.BeginForm("DeleteJoin", "Engineers"))
{
  @Html.Hidden("joinId", @join.EngMachId)
  <input type="submit" value="Delete"/>
}
    }
  </ul>
}



<p>@Html.ActionLink("Add a Machine to this engineer", "AddMachine", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Edit this Engineer", "Edit", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Delete this Engineer", "Delete", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Back to the list of Engineers", "Index")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>
