@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Edit</h2>

<h4>Edit this Engineer: @Html.DisplayFor(model => model.EngineerName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.LabelFor(model => model.EngineerName, "Engineer Name: ")
  @Html.EditorFor(model => model.EngineerName)

  @Html.LabelFor(model => model.HireDate, "Hire Date: ")
  @Html.EditorFor(model => model.HireDate)

  <input type="submit" value="Save" />
}
<hr>
<p>
  @Html.ActionLink("Back to list of Engineers", "Index") |
  @Html.ActionLink("Return Home", "Index", "Home")
</p>